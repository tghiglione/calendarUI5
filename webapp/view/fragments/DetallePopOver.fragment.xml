<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="detailsPopover"
		title="Editar o eliminar novedad"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="deleteNovedad"
					text="Eliminar"
					press="handleDelete" 
                    type="Reject"/>
                <Button
                id="editNovedad"
                text="Editar"
                press="handleEdit"
                type="Emphasized"/>
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>